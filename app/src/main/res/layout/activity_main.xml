<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>

        <variable
            name="mainActivity"
            type="com.example.gps_foreground_test.MainActivity"
            />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        >

        <LinearLayout
            android:id = "@+id/ll_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@id/ll_buttons"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="android_id" />

            <TextView
                android:id="@+id/tv_WebSocket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="@{mainActivity.wstext}" />


            <TextView
                android:id="@+id/tv_apiresponse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@{mainActivity.apitext}"/>
        </LinearLayout>
        <LinearLayout
            android:id = "@+id/ll_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_textview"
            >
            <Button
                android:id="@+id/bt_connect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/start_collect"
                android:onClick="clickgetlocation"
                android:layout_marginBottom="30dp"
                />
            <Button
                android:id="@+id/bt_close"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/stop_collect"
                android:onClick="clickstop"
                android:layout_marginBottom="30dp"
                />

            <Button
                android:id="@+id/bt_clear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="清除資料"
                android:onClick="clickclear"
                android:layout_marginBottom="30dp"
                />
            <Button
                android:id="@+id/bt_reconnet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reconnect"
                android:onClick="clickreconnect"
                />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
